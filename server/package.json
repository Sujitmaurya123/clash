    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "nodemailer": "^6.9.14",
    "prisma": "^5.18.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/nodemailer": "^6.4.15",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.4",
    "typescript": "^5.5.4"
